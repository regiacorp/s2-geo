{
  "name": "s2-geo-datum",
  "version": "1.0.0",
  "description": "Work with spherical geometry and it's xyz vector normals",
  "main": "lib/index.js",
  "scripts": {
    "lint+build+test": "yarn run lint && yarn run build && yarn run test",
    "lint": "echo linting... && standard ./src/**/*.js && echo 'successfully linted'",
    "build": "echo building... && babel src/ -d lib/ && echo 'successfully built'",
    "prepublish": "yarn run build",
    "test": "echo running server tests... && standard && tape test/**/*.js | tap-summary && echo 'successfully completed tests'"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/regia-corporation/s2-geo.git"
  },
  "author": "Craig OConnor",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/regia-corporation/s2-geo/issues"
  },
  "homepage": "https://github.com/regia-corporation/s2-geo#readme",
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/plugin-syntax-flow": "^7.2.0",
    "@babel/preset-env": "^7.5.5",
    "@babel/preset-flow": "^7.0.0",
    "babel-eslint": "^10.0.2",
    "core-js": "^3.2.1",
    "eslint": "^6.1.0",
    "eslint-plugin-flowtype": "^4.2.0",
    "flow-bin": "^0.105.2",
    "standard": "^13.1.0",
    "tap-summary": "^4.0.0",
    "tape": "^4.11.0",
    "yarn-upgrade-all": "^0.5.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "plugins": [
      "flowtype"
    ]
  }
}
